<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#0000ffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" app:cardCornerRadius="15dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#2329d6" android:layout_gravity="center_horizontal" android:id="@+id/tv_title_dialog_reset" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="Do you want to rate app ?"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                <Button android:textColor="#fff" android:layout_gravity="center_vertical" android:id="@+id/btn_yes" android:background="@drawable/round_bg_button" android:layout_width="100dp" android:layout_height="35dp" android:layout_marginTop="15dp" android:layout_marginRight="20dp" android:layout_marginBottom="15dp" android:text="Rate now" android:textAllCaps="false"/>
                <Button android:textColor="#fff" android:layout_gravity="center_vertical" android:id="@+id/btn_no" android:background="@drawable/round_bg_button" android:layout_width="100dp" android:layout_height="35dp" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/later_exit" android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
