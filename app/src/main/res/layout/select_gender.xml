<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#0000ffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" app:cardCornerRadius="15dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/_18ssp" android:textColor="#2329d6" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:text="Gender"/>
            <View android:background="#f6f8ff" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="20dp"/>
            <RelativeLayout android:id="@+id/rl_male" android:layout_width="match_parent" android:layout_height="45dp">
                <TextView android:textSize="16sp" android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:text="Male" android:layout_centerVertical="true"/>
                <ToggleButton android:id="@+id/tgbtn_male" android:background="@drawable/togglebutton_gender" android:clickable="false" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="20dp" android:checked="true" android:textOn="" android:textOff="" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:background="#f6f8ff" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="20dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_female" android:layout_width="match_parent" android:layout_height="45dp">
                <TextView android:textSize="16sp" android:textColor="#000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:text="Female" android:layout_centerVertical="true"/>
                <ToggleButton android:id="@+id/tgbtn_female" android:background="@drawable/togglebutton_gender" android:clickable="false" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="20dp" android:textOn="" android:textOff="" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:background="#f6f8ff" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="20dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_accept"
                android:layout_width="@dimen/_145sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/round_bg_button"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="#fff" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
